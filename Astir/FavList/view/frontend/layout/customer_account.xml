<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd" label="Customer My Account (All Pages)" design_abstraction="custom">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block ifconfig="amlist/general/active" class="Magento\Framework\View\Element\Html\Link\Current" name="customer-account-navigation-favlist">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Favourites</argument>
                    <argument name="path" xsi:type="string">amlist</argument>
                    <argument name="sortOrder" xsi:type="number">500</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
