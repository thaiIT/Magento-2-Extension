<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="staff" translate="label" sortOrder="1200" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Staff</label>
            <tab>general</tab>
            <resource>THAIHOANG_Staff::staff_config</resource>
            <group id="view" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Staff view setting</label>
                <field id="enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Staff On Frontend</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="items_per_page" translate="label comment" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Staff Per Page</label>
                    <comment>Empty value is the same as default 2</comment>
                </field>
            </group>

        </section>
    </system>
</config>
